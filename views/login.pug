doctype html
html(lang="en")
    head
        include partials/head
    body(style="background-image: url(/static/img/bg.jpg); background-size: cover; background-repeat: no-repeat; background-position: center; background-attachment: fixed;")
        div.h-screen.flex.flex-col.justify-center.items-center.bg-gray-900.bg-opacity-75
            a.text-white.text-center.mb-12.text-3xl.font-bold
                span.text-sky-400 my
                span inventory
            div(class="bg-white lg:w-1/3 md:w-1/2 rounded-lg shadow-xl p-10")
                div(class="text-center")
                    h1(class="text-3xl font-semibold") Login
                - if (error)
                    div(class="text-center")
                        p(class="text-red-500 text-sm") #{error}
                div(class="mt-10")
                    form(action="/login" method="POST")
                        div(class="flex flex-col mb-6")
                            label(class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600") Username
                            input(type="text" name="username" placeholder="Username" class="border rounded-lg px-3 py-2 mt-1 text-sm focus:outline-none focus:border-blue-500")
                        div(class="flex flex-col mb-6")
                            label(class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600") Password
                            input(type="password" name="password" placeholder="Password" class="border rounded-lg px-3 py-2 mt-1 text-sm focus:outline-none focus:border-blue-500")
                        div(class="flex flex-col mt-6")
                            button(class="bg-sky-500 text-white px-4 py-2 rounded font-medium tracking-wide hover:bg-sky-600") Login
