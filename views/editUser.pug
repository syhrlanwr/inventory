extends layouts/layout 

block content
    - if (errors) {
        each error in errors
            div(class="bg-red-100 border flex flex-col mb-4 border-red-400 text-red-700 px-4 py-3 rounded relative" role="error")
                strong(class="font-bold") Gagal!
                span(class="") #{error.msg}
    - }
    div.bg-white.rounded-lg.shadow-lg
        form(action="/users/edit/"+user.id method="POST").flex.flex-col.px-8.py-6
            div.px-6.py-4.text-xl
                div.flex.flex-col.mb-6
                    label(for="name" class="mb-1 text-gray-600") Nama
                    input(type="text" name="name" placeholder="Nama" class="border rounded-lg px-3 py-2 mt-1 focus:outline-none focus:border-blue-500" value=user.name required)
                div.flex.flex-col.mb-6
                    label(for="username" class="mb-1 text-gray-600") Username
                    input(type="text" name="username" placeholder="Username" class="border rounded-lg px-3 py-2 mt-1 focus:outline-none focus:border-blue-500" value=user.username required)
                div.flex.flex-col.mb-6
                    label(for="password" class="mb-1 text-gray-600") Password
                    input(type="password" name="password" placeholder="******" class="border rounded-lg px-3 py-2 mt-1 focus:outline-none focus:border-blue-500")
                div.flex.flex-col.mb-6
                    label(for="confirmPassword" class="mb-1  text-gray-600") Konfirmasi Password
                    input(type="password" name="confirmPassword" placeholder="******" class="border rounded-lg px-3 py-2 mt-1 focus:outline-none focus:border-blue-500")
                button(type="submit" class="bg-sky-500 text-white px-4 py-2 rounded font-medium  hover:bg-sky-600") Edit